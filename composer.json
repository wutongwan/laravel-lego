{
    "name": "wutongwan/lego",
    "description": "Yet another CRUD widgets for Laravel",
    "homepage": "https://github.com/wutongwan/laravel-lego",
    "license": "MIT",
    "keywords": [
        "crud",
        "admin",
        "widget"
    ],
    "authors": [
        {
            "name": "zhwei",
            "email": "zhwei.yes@gmail.com"
        }
    ],
    "require": {
        "php": "^7.1",
        "ext-json": "*",
        "illuminate/support": "^6.0 || ^7.0",
        "laravelcollective/html": "^6.0",
        "mews/purifier": "^2.0 || ^3.2",
        "mobiledetect/mobiledetectlib": "^2.8",
        "phpoffice/phpspreadsheet": "^1.14"
    },
    "require-dev": {
        "box/spout": "^2.7",
        "fzaninotto/faker": "^1.6",
        "laravel/laravel": "^6.0 || ^7.0",
        "ongr/elasticsearch-dsl": "^6.0",
        "phpunit/phpunit": "^7.5.15 || ^8.4 || ^9.0"
    },
    "autoload": {
        "files": [
            "src/Lego/Utility/functions.php"
        ],
        "psr-4": {
            "Lego\\": "src/Lego/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Lego\\Tests\\": "tests/",
            "Lego\\Demo\\": "demo/app"
        }
    },
    "suggest": {
        "ongr/elasticsearch-dsl": "Required to use the ElasticSearch Query."
    },
    "extra": {
        "laravel": {
            "providers": [
                "Lego\\LegoServiceProvider"
            ]
        }
    },
    "config": {
        "sort-packages": true
    },
    "prefer-stable": true,
    "minimum-stability": "stable"
}
